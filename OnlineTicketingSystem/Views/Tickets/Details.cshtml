@model OnlineTicketingSystem.Models.Ticket

@{
    ViewBag.Title = OnlineTicketingSystem.Resourses.Language.Details;
}

<h2>@OnlineTicketingSystem.Resourses.Language.Details</h2>

<div>
    <h4>@OnlineTicketingSystem.Resourses.Language.Ticket</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @OnlineTicketingSystem.Resourses.Language.Department
            <!--@Html.DisplayNameFor(model => model.Department.DeptName)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Department.DeptName)
        </dd>

        <dt>
            @OnlineTicketingSystem.Resourses.Language.Employee
            <!--@Html.DisplayNameFor(model => model.Employee.EmpName)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Employee.EmpName)
        </dd>

        <dt>
            @OnlineTicketingSystem.Resourses.Language.Project
            <!--@Html.DisplayNameFor(model => model.Project.ProjectTitle)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Project.ProjectTitle)
        </dd>

        <dt>
            @OnlineTicketingSystem.Resourses.Language.Description
            <!--@Html.DisplayNameFor(model => model.Description)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Description)
        </dd>

        <dt>
            @OnlineTicketingSystem.Resourses.Language.SubmitDate
            <!--@Html.DisplayNameFor(model => model.SubmitDate)-->
        </dt>

        <dd>
            @Html.DisplayFor(model => model.SubmitDate)
        </dd>

        <dt>
            @OnlineTicketingSystem.Resourses.Language.Status
            <!--@Html.DisplayNameFor(model => model.Status)-->
        </dt>

        <dd>
            @if (Model.Status == "O")
            {
                <span>Open</span>
            }
            else if (Model.Status == "C")
            {
                <span>Close</span>
            }
            @*    @Html.DisplayFor(model => model.Status)*@
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink(OnlineTicketingSystem.Resourses.Language.Edit, "Edit", new { id = Model.TicketId }) |
    @Html.ActionLink(OnlineTicketingSystem.Resourses.Language.Back, "Index")
</p>
