<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @OnlineTicketingSystem.Resourses.Language.AppName</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!--@Html.ActionLink("Online Ticketing System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })-->
                @Html.ActionLink(OnlineTicketingSystem.Resourses.Language.AppName, "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink(OnlineTicketingSystem.Resourses.Language.Home, "Index", "Tickets")</li>
                    <li>@Html.ActionLink(OnlineTicketingSystem.Resourses.Language.Search, "Search", "Tickets")</li>
                    <li>@Html.ActionLink(OnlineTicketingSystem.Resourses.Language.About, "About", "Home")</li>
                    <li>@Html.ActionLink(OnlineTicketingSystem.Resourses.Language.Contact, "Contact", "Home")</li>
                    <li>@Html.ActionLink(OnlineTicketingSystem.Resourses.Language.Reports, "Chart", "Tickets")</li>
                    <!--<li>@Html.ActionLink("Home", "Index", "Tickets")</li>
    <li>@Html.ActionLink("Search", "Search", "Tickets")</li>
    <li>@Html.ActionLink("About", "About", "Home")</li>
    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
    <li>@Html.ActionLink("Reports & Analysis", "Chart", "Tickets")</li>-->
                </ul>
                @Html.Partial("_LanguagePartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - @OnlineTicketingSystem.Resourses.Language.AppName</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
